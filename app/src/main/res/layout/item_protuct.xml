<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_imgProduto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_nomeProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_imgProduto"
        android:text="@string/nome_produto"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_ultimoLance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nomeProduto"
        android:layout_toRightOf="@+id/iv_imgProduto"
        android:text="@string/ultimo_lance" />

    <TextView
        android:id="@+id/tv_item_list_end_at"
        android:layout_below="@id/tv_ultimoLance"
        android:text="End at:"
        android:layout_toRightOf="@id/iv_imgProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>